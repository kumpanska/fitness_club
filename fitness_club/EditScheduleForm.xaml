<Window x:Class="fitness_club.EditScheduleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування розкладу" Height="250" Width="400">
    <Grid  Background="LightSalmon">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5">
            <TextBlock Text="День:" Width="80" VerticalAlignment="Center" FontWeight="DemiBold"/>
            <TextBox x:Name="DayBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
            <TextBlock Text="Час:" Width="80" VerticalAlignment="Center" FontWeight="DemiBold"/>
            <TextBox x:Name="TimeBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5">
            <TextBlock Text="Заняття:" Width="80" VerticalAlignment="Center" FontWeight="DemiBold"/>
            <ComboBox x:Name="ActivityComboBox" Width="200"/>
        </StackPanel>

        <Button Content="Зберегти" Grid.Row="3" Width="100" HorizontalAlignment="Right" Margin="0,10,0,0" Click="Save_Click"/>
    </Grid>
</Window>
