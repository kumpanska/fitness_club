<Window x:Class="fitness_club.Coaches"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club"
        mc:Ignorable="d"
        Title="Список тренерів" Height="450" Width="441" MinHeight="400" MinWidth="420">
    <Grid Background="LightSalmon">
        <TextBlock Text="Список тренерів:" 
                   FontSize="16" FontWeight="DemiBold" Foreground="Black"
                   Margin="0,0,0,10"/>
        <ListBox Name="CoachesListBox"
                 Background="White"
                 FontSize="14"
                 DisplayMemberPath="Name"
                 Margin="38,30,36,38"/>
    </Grid>
</Window>
