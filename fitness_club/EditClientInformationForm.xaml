<Window x:Class="fitness_club.EditClientInformationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club"
        mc:Ignorable="d"
        Title="EditClientInformationForm" Height="450" Width="800" MinHeight="400" MinWidth="700">
    <Grid Background="LightSalmon">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Ім'я" FontSize="25" 
FontWeight="Black"
Margin="27,26,0,0"
Foreground="White"
VerticalAlignment="Top"
HorizontalAlignment="Left"
Grid.Column="0" />
        <TextBlock Text="Прізвище"  FontSize="25" VerticalAlignment="Top"
FontWeight="Black"
Margin="27,125,0,0"
Foreground="White"
HorizontalAlignment="Left"
Grid.Column="0"/>
        <TextBlock Text="По батькові"  FontSize="25" VerticalAlignment="Top"
FontWeight="Black"
Margin="27,10,0,0"
Foreground="White"
HorizontalAlignment="Left"
Grid.Column="0" Grid.Row="1"/>
        <TextBlock Text="Номер телефону"  FontSize="25"
FontWeight="Black"
Margin="155,32,0,0"
Foreground="White"
VerticalAlignment="Top"
HorizontalAlignment="Left"
Grid.Column="1" Grid.Row="0"/>
        <TextBlock Text="Пошта"  FontSize="25"
FontWeight="Black"
Margin="288,182,0,0"
Foreground="White"
VerticalAlignment="Top"
HorizontalAlignment="Left"
Grid.Column="1" />
        <TextBox x:Name="ClientNameText" FontSize="25"
  FontWeight="Black"
  Margin="10,72,0,0"
  Foreground="Black"
  VerticalAlignment="Top"
  HorizontalAlignment="Left"
  Grid.Column="0" Width="258" Height="48"/>
        <TextBox x:Name="ClientEmailText" FontSize="25"
FontWeight="Black"
Margin="46,3,0,0"
Foreground="Black"
VerticalAlignment="Top"
HorizontalAlignment="Left"
Grid.Column="1" Width="344" Height="47" Grid.Row="1"/>
        <TextBox  x:Name="ClientLastNameText" FontSize="25"
FontWeight="Black"
Margin="10,163,0,0"
Foreground="Black"
VerticalAlignment="Top"
HorizontalAlignment="Left"
Grid.Column="0" Width="258" Height="46"/>
        <TextBox  x:Name="ClientMiddleNameText" FontSize="25"
FontWeight="Black"
Margin="10,48,0,0"
Foreground="Black"
VerticalAlignment="Top"
HorizontalAlignment="Left"
Grid.Column="0" Width="258" Height="46" Grid.Row="1"/>
        <TextBox  x:Name="ClientPhoneNumberText" FontSize="25"
FontWeight="Black"
Margin="46,73,0,0"
Foreground="Black"
VerticalAlignment="Top"
HorizontalAlignment="Left"
Grid.Column="1" Width="344" Height="47"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,95,7,-23" Grid.Column="1" Width="234">
            <Button FontWeight="DemiBold" Content="Зберегти" Width="100" Margin="5,0" Click="SaveButton_Click" Background="White" Height="50"/>
            <Button  FontWeight="DemiBold" Content="Скасувати" Width="100" Click="CancelButton_Click" Background="White" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
