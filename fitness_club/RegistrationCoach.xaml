<Window x:Class="fitness_club.RegistrationCoach"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club"
        mc:Ignorable="d"
        Title="Реєстрація тренера" Height="500" Width="800" MinHeight="450" MinWidth="700">
    <Grid Background="LightSalmon">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Ім'я" FontSize="25" FontWeight="Black"
                   Margin="27,26,0,0" Foreground="White"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0" />
        <TextBlock Text="Прізвище" FontSize="25" FontWeight="Black"
                   Margin="27,125,0,0" Foreground="White"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0"/>
        <TextBlock Text="По батькові" FontSize="25" FontWeight="Black"
                   Margin="27,10,0,0" Foreground="White"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1"/>
        <TextBlock Text="Номер телефону" FontSize="25" FontWeight="Black"
                   Margin="155,32,0,0" Foreground="White"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0"/>
        <TextBlock Text="Пошта" FontSize="25" FontWeight="Black"
                   Margin="288,10,0,0" Foreground="White"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1"/>
        <TextBlock Text="Фітнес послуги" FontSize="25" FontWeight="Black"
                   Margin="179,142,0,0" Foreground="White"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>

        <TextBox x:Name="CoachNameText" FontSize="25" FontWeight="Black"
                 Margin="10,72,0,0" Foreground="Black"
                 VerticalAlignment="Top" HorizontalAlignment="Left"
                 Grid.Column="0" Width="258" Height="48"/>
        <TextBox x:Name="CoachLastNameText" FontSize="25" FontWeight="Black"
                 Margin="10,163,0,0" Foreground="Black"
                 VerticalAlignment="Top" HorizontalAlignment="Left"
                 Grid.Column="0" Width="258" Height="46"/>
        <TextBox x:Name="CoachMiddleNameText" FontSize="25" FontWeight="Black"
                 Margin="10,48,0,0" Foreground="Black"
                 VerticalAlignment="Top" HorizontalAlignment="Left"
                 Grid.Column="0" Width="258" Height="46" Grid.Row="1"/>
        <TextBox x:Name="CoachPhoneNumberText" FontSize="25" FontWeight="Black"
                 Margin="46,73,0,0" Foreground="Black"
                 VerticalAlignment="Top" HorizontalAlignment="Left"
                 Grid.Column="1" Width="344" Height="47"/>
        <TextBox x:Name="CoachEmailText" FontSize="25" FontWeight="Black"
                 Margin="46,48,0,0" Foreground="Black"
                 VerticalAlignment="Top" HorizontalAlignment="Left"
                 Grid.Column="1" Width="344" Height="47" Grid.Row="1"/>
        <ComboBox x:Name="ExerciseTypeCbo" HorizontalAlignment="Left"
                  Height="33" Margin="193,176,0,0" VerticalAlignment="Top"
                  Width="166" Grid.Column="1"/>
        <Button Content="Реєстрація" FontSize="25" FontWeight="Black"
                Foreground="White" Background="DarkRed"
                Margin="291,121,309,25" Grid.Row="1" Grid.ColumnSpan="2"
                Click="RegistrationCoach_Click"/>

        <TextBlock x:Name="txtError"
                   Grid.Row="2" Grid.ColumnSpan="2"
                   Margin="10,10,10,10"
                   FontSize="16"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   TextAlignment="Center"/>
    </Grid>
</Window>
