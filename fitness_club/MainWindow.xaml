<Window x:Class="fitness_club.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club"
        mc:Ignorable="d"
        Title="FitnessClub" Height="600" Width="1100" MinHeight="600" MinWidth="900">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Moccasin"/>
        <Button Grid.Column="0" Background="LightSalmon" Style="{StaticResource RoundedButtonStyle}" 
                Content="Реєстрація тренера" Foreground="Black" FontSize="18" FontWeight="DemiBold"
                Width="180" Height="60" VerticalAlignment="Top" Margin="0,168,0,0" HorizontalAlignment="Center"/>

        <Button Grid.Column="0" Background="DarkSalmon" Style="{StaticResource RoundedButtonStyle}" 
                Content="Ввійти як тренер" Foreground="Black" FontSize="18" FontWeight="DemiBold"
                Width="180" Height="60" VerticalAlignment="Top" Margin="0,254,0,0" HorizontalAlignment="Center"/>

        <Button Grid.Column="0" Background="LightSalmon" Style="{StaticResource RoundedButtonStyle}" 
                Content="Реєстрація клієнта" Foreground="Black" FontSize="18" FontWeight="DemiBold"
                Width="180" Height="60" VerticalAlignment="Top" Margin="0,338,0,0" HorizontalAlignment="Center"/>

        <Button Grid.Column="0" Background="DarkSalmon" Style="{StaticResource RoundedButtonStyle}" 
                Content="Ввійти як клієнт" Foreground="Black" FontSize="18" FontWeight="DemiBold"
                Width="180" Height="60" VerticalAlignment="Top" Margin="0,425,0,0" HorizontalAlignment="Center"/>

        <TextBlock Text="Fitness Club"
                   FontSize="25"
                   FontWeight="Black"
                   Margin="10"
                   Foreground="Black"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Grid.Column="0"/>
        <Grid Grid.Column="1" Background="SeaShell">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="1" Background="CadetBlue" Style="{StaticResource RoundedButtonStyle}" Content="Комплекс вправ" Foreground="Black" FontSize="20" FontWeight="DemiBold" Width="160" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Grid.Column="1" Grid.Row="1" Background="Black" Style="{StaticResource RoundedButtonStyle}" Content="Клієнти"  Foreground="White" FontSize="20" FontWeight="DemiBold" Width="160" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Grid.Column="2" Grid.Row="1" Background="Goldenrod" Style="{StaticResource RoundedButtonStyle}" Content="Тренери"  Foreground="Black" FontSize="20" FontWeight="DemiBold"  Width="160" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Grid.Column="3" Grid.Row="1"  Background="Brown" Style="{StaticResource RoundedButtonStyle}" Content="Розклад занять"  Foreground="White" FontSize="20" FontWeight="DemiBold" Width="160" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Grid.Column="4" Grid.Row="1" Background="Plum" Style="{StaticResource RoundedButtonStyle}" Content="Рейтинг тренерів"  Foreground="Black" FontSize="19" FontWeight="DemiBold"  Width="160" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
