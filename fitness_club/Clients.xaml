        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club"
        mc:Ignorable="d"
        Title="Список клієнтів" Height="450" Width="441" MinHeight="400" MinWidth="420">
