<Window x:Class="fitness_club.AddEditScheduleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування розкладу" Height="250" Width="400" MinHeight="200" MinWidth="350">
    <Grid Background="LightSalmon">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Тренер:" VerticalAlignment="Top" FontWeight="DemiBold" Height="16" Margin="10,10,301,0" />
        <ComboBox Grid.Row="0" x:Name="CoachComboBox" DisplayMemberPath="FullName" SelectedValuePath="Id" SelectionChanged="CoachComboBox_SelectionChanged" Margin="104,45,160,165"/>
        <TextBlock Grid.Column="0" Text="Дата:" VerticalAlignment="Top" FontWeight="DemiBold" Height="16" Margin="10,83,301,0" />
        <DatePicker x:Name="DatePicker" Margin="104,78,160,130"/>
        <TextBlock Grid.Column="0" Text="Час (HH:MM):" VerticalAlignment="Top" FontWeight="DemiBold" Height="16" Margin="10,121,301,0" />
        <TextBox x:Name="TimeBox" Margin="104,115,160,92"/>
        <TextBlock Grid.Column="0" Text="Фітнес-послуги:" VerticalAlignment="Top" FontWeight="DemiBold" Height="16" Margin="10,53,304,0" />
        <ComboBox x:Name="FitnessServiceComboBox" DisplayMemberPath="Name" SelectedValuePath="id" Margin="104,10,160,201"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Width="0" />
        <Button Content="Зберегти" Background="White" Click="Save_Click" Margin="172,194,128,10"/>
        <Button Content="Відмінити" Background="White" Click="Cancel_Click" Margin="287,194,10,10"/>
    </Grid>
</Window>
